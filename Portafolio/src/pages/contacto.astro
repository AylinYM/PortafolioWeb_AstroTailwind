---
import Base from "../layouts/Base.astro";
import "../styles/contacto.css"; // Importa estilos específicos
---

<Base
  title="Contacto - Aylin Yap"
  description="Contacta con Aylin Yap para proyectos de desarrollo web"
>
  <!-- Hero con parallax y partículas -->
  <section class="hero-contacto relative overflow-hidden">
    <!-- Fondo con gradiente animado -->
    <div
      class="absolute inset-0 bg-gradient-to-br from-black via-gray-900 to-red-950 animate-gradient"
    >
    </div>

    <!-- Partículas flotantes -->
    <div class="particles absolute inset-0 overflow-hidden pointer-events-none">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>

    <!-- Imagen de fondo -->
    <div class="absolute inset-0 opacity-20">
      <div
        class="w-full h-full bg-cover bg-center"
        style="background-image: url('/img/contacto-bg.jpg')"
      >
      </div>
    </div>

    <!-- Contenido hero -->
    <div
      class="relative container mx-auto px-4 py-32 text-center text-white z-10"
    >
      <h1
        class="text-5xl md:text-6xl lg:text-7xl font-bold mb-6 animate-fade-in-down"
      >
        Contáctame
      </h1>
      <p
        class="text-xl md:text-2xl opacity-90 animate-fade-in-up animation-delay-200 max-w-2xl mx-auto"
      >
        ¿Tienes un proyecto o idea? ¡Escríbeme!
      </p>

      <!-- Iconos flotantes -->
      <div
        class="flex justify-center gap-6 mt-8 animate-fade-in-up animation-delay-400"
      >
        <div
          class="icon-float bg-red-600/20 backdrop-blur-sm p-4 rounded-full border border-red-500/30"
        >
          <svg
            class="w-8 h-8 text-red-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
        <div
          class="icon-float animation-delay-200 bg-red-600/20 backdrop-blur-sm p-4 rounded-full border border-red-500/30"
        >
          <svg
            class="w-8 h-8 text-red-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
        <div
          class="icon-float animation-delay-400 bg-red-600/20 backdrop-blur-sm p-4 rounded-full border border-red-500/30"
        >
          <svg
            class="w-8 h-8 text-red-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
            ></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Onda decorativa -->
    <div class="absolute bottom-0 left-0 w-full overflow-hidden leading-none">
      <svg
        class="relative block w-full h-24"
        viewBox="0 0 1200 120"
        preserveAspectRatio="none"
      >
        <path
          d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z"
          class="fill-gray-50"></path>
      </svg>
    </div>
  </section>

  <!-- Formulario de contacto -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2
        class="text-4xl md:text-5xl font-bold text-center mb-4 animate-on-scroll"
      >
        Formulario de Contacto
        <span class="block w-16 h-1 bg-red-600 mx-auto mt-4 rounded-full"
        ></span>
      </h2>

      <div class="max-w-3xl mx-auto mt-12">
        <!-- Tarjeta -->
        <div
          class="form-card bg-white rounded-2xl shadow-2xl p-8 md:p-12 animate-on-scroll animation-delay-200 relative overflow-hidden"
        >
          <form id="contact-form" class="relative z-10 space-y-6">
            <div class="input-group">
              <label
                for="nombre"
                class="block text-gray-700 font-medium mb-2 flex items-center gap-2"
              >
                Nombre
              </label>
              <input
                type="text"
                id="nombre"
                name="nombre"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-red-600 focus:ring-2 focus:ring-red-200 outline-none transition-all duration-300 hover:border-gray-300"
                placeholder="Tu nombre completo"
                required
              />
            </div>

            <div class="input-group">
              <label
                for="correo"
                class="block text-gray-700 font-medium mb-2 flex items-center gap-2"
              >
                Correo electrónico
              </label>
              <input
                type="email"
                id="correo"
                name="correo"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-red-600 focus:ring-2 focus:ring-red-200 outline-none transition-all duration-300 hover:border-gray-300"
                placeholder="ejemplo@email.com"
                required
              />
            </div>

            <div class="input-group">
              <label
                for="mensaje"
                class="block text-gray-700 font-medium mb-2 flex items-center gap-2"
              >
                Mensaje
              </label>
              <textarea
                id="mensaje"
                name="mensaje"
                rows="5"
                class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:border-red-600 focus:ring-2 focus:ring-red-200 outline-none transition-all duration-300 hover:border-gray-300 resize-none"
                placeholder="Escribe tu mensaje aquí..."
                required></textarea>
            </div>

            <button
              type="submit"
              class="btn-submit w-full bg-gradient-to-r from-red-600 to-red-700 text-white font-semibold py-4 px-8 rounded-xl hover:from-red-700 hover:to-red-800 transition-all duration-300 transform hover:scale-[1.02] hover:shadow-2xl relative overflow-hidden group"
            >
              <span
                class="relative z-10 flex items-center justify-center gap-2"
              >
                Enviar Mensaje
              </span>
              <span class="ripple"></span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Intersection Observer
    const observerOptions = { threshold: 0.1, rootMargin: "0px 0px -50px 0px" };
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) entry.target.classList.add("visible");
      });
    }, observerOptions);

    document
      .querySelectorAll(".animate-on-scroll")
      .forEach((el) => observer.observe(el));

    // Ripple efecto
    const btnSubmit = document.querySelector(".btn-submit");
    btnSubmit?.addEventListener("click", function (e) {
      const ripple = this.querySelector(".ripple");
      const rect = this.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      if (ripple) {
        ripple.style.left = x + "px";
        ripple.style.top = y + "px";
      }
    });

    // Formulario
    const form = document.getElementById("contact-form");
    form?.addEventListener("submit", (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      console.log("Formulario enviado:", Object.fromEntries(formData));
      alert("¡Mensaje enviado con éxito! Te responderé pronto.");
      form.reset();
    });
  </script>
</Base>
