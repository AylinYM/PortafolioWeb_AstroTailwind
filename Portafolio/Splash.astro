<div
  id="splash"
  class="fixed inset-0 flex flex-col items-center justify-center
         bg-gradient-to-br from-black via-gray-900 to-gray-800
         text-white z-[9999] transition-opacity duration-700">

  <!-- Logo o inicial -->
  <div class="text-6xl font-bold tracking-wide mb-4 text-red-600 animate-pulse">
    AYLIN
  </div>

  <!-- Texto animado -->
  <p class="text-xl opacity-80 animate-fadeIn">
    Cargando portafolio...
  </p>

  <!-- Loader -->
  <div class="mt-8 w-12 h-12 border-4 border-gray-600 border-t-red-600 rounded-full animate-spin"></div>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fadeIn {
    animation: fadeIn 1s ease forwards;
  }
  
</style>
